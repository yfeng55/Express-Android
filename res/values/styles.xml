<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- BASE THEME -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- CUSTOM THEME -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@color/darkblue</item>
        <item name="android:height">55dp</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:icon">@drawable/logo</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>
    
    <!-- Actionbar text styles -->
    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
    </style>
    
    
    <!-- VIEW STYLES -->
    
    <style name="ExpressText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="SolidLine">
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/lightgray</item>
    </style>
    
    <style name="SpinningLoader" parent="@android:style/Widget.Holo.Light.ProgressBar.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="MyStatsVisitCount">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MyStatsVisitLabel">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="MyStatsProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">365</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:progress">3</item>
        <item name="android:progressDrawable">@drawable/horizontal_progress_drawable</item>
    </style>

    <style name="HelpTextTitle">
    	<item name="android:padding">16dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkblue</item>
    </style>
    
    <style name="HelpTextBody">
    	<item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>
    
    
</resources>





