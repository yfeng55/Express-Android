<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gymLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/home_logo" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/gymInfoHolder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp" >

        <TextView
            android:id="@+id/gymNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/darkblue"
            android:textScaleX=".9"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/openCloseTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gymNameText"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/darkblue"
            android:textScaleX=".9"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/capacityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/openCloseTimeText"
            android:layout_centerHorizontal="true"
            android:text="Capacity"
            android:textColor="@color/darkblue"
            android:textScaleX=".9"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/capacityTitle"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/darkblue"
            android:textScaleX=".9"
            android:textSize="48sp"
            android:textStyle="bold" />


