<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_MyName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="My Name"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/mystats_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_weeklyprogress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Weekly Progress"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/weeklyprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:indeterminate="false"
            android:max="7"
            android:minHeight="35dp"
            android:minWidth="200dp"
            android:progress="3"
            android:progressDrawable="@drawable/horizontal_progress_drawable_red" />

        <TextView
            android:id="@+id/tv_monthlyprogress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="50dp"
            android:gravity="left"
            android:text="Monthly Progress"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/monthlyprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:indeterminate="false"
            android:max="31"
            android:minHeight="35dp"
            android:minWidth="200dp"
            android:progress="3"
            android:progressDrawable="@drawable/horizontal_progress_drawable_red" />

        <TextView
            android:id="@+id/tv_ytdprogress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="50dp"
            android:gravity="left"
            android:text="Year To Date Progress"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/ytd_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:indeterminate="false"
            android:max="365"
            android:minHeight="35dp"
            android:minWidth="200dp"
            android:progress="3"
            android:progressDrawable="@drawable/horizontal_progress_drawable_red" />
    </LinearLayout>

</LinearLayout>
